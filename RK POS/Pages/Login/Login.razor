@page "/Login"

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f4f4f4;
        }

        .login-container {
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            border-radius: 5px;
            width: 500px;
            height: 500px;
            text-align: center;
        }

        .login-container h2 {
            margin-top:40px;
            margin-bottom: 20px;
            color: #333;
        }

        .login-form {
            text-align: center;
        }

            .login-form input {
                width: 100%;
                height:90px;
                padding: 10px;
                margin-top: 15px;
                box-sizing: border-box;
                border: 1px solid #ccc;
                border-radius: 3px;
                display: block; /* Ensures the input fields are displayed as block elements */
                margin-left: auto;
                margin-right: auto;
            }


        .login-form button {
            width: 50%;
            height:50px;
            padding: 10px;
            margin-top:20px;
            box-sizing: border-box;
            color: #fff;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

        
    </style>
</head>
<body>

<div class="login-container">
    <h2>Login</h2>
    <form class="login-form">
        <input type="text" placeholder="Username" required>
        <input type="password" placeholder="Password" required>
        <MudButton Variant="Variant.Filled" Class="button" Color="Color.Primary">Login</MudButton>
    </form>
</div>

</body>
